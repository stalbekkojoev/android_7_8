<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Button.Base" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">81dp</item>
        <item name="android:layout_height">81dp</item>
        <item name="cornerRadius">200dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">28dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="Button.gray" parent="Button.Base">
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/gray</item>
    </style>

    <style name="Button.orange" parent="Button.Base">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/orange</item>
    </style>

    <style name="Button.gray_dark" parent="Button.Base">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/gray_black</item>
    </style>
<style name="SplashTime" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    <item name="android:windowBackground">@drawable/splash_screen</item>
    <item name ="backgroundColor">@color/white</item>
</style>
</resources>